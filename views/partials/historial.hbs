<div class="col-4">
        <div>
          <h4>Historial</h4>
          <hr class="bg-light w-25 mx-auto" />

          <table class="table">
            <thead class="text-white">
              <th>Nombre</th>
              <th>Comentario</th>
              <th>Monto</th>
              <th>-</th>
            </thead>
            <tbody class="text-white" id="gastosHistorial"></tbody>
            {{#each gastos}}
            <tr>
              <td style="border:1px solid">{{roomer}}</td>
              <td style="border:1px solid">{{descripcion}}</td>
              <td style="border:1px solid">${{monto}}</td>
              <td>
                <button type="button" class="btn btn-warning">editar</button>
                <button type="button" class="btn btn-danger">borrar</button>
              </td>
            </tr>
            {{/each}}
          </table>
        </div>
      </div>

      <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
      
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
              <div class="border rounded p-2 m-auto p-4">
                <h4>Editar Gasto</h4>
                <hr class="bg-light w-25 mx-auto" />
      
                <div class="d-flex flex-column align-items-center">
                  <h6>Roommate</h6>
                  <select class="form-control w-50 mb-2" id="roommatesSelectModal"></select>
                  <h6>Descripci√≥n</h6>
                  <textarea class="form-control w-50 mb-2" id="descripcionModal">
                        Articulos de limpieza</textarea>
      
                  <h6>Monto:</h6>
                  <input class="form-control w-50 mb-2" id="montoModal" type="number" value="20000" />
                </div>
                <div class="d-block my-1">
                  <button class="btn btn-primary" onclick="updateGasto()">
                    Agregar
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>